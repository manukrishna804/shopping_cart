<h2 class="text-center my-4">All Orders</h2>
<div class="text-right mb-3">
  <a href="/admin" class="btn btn-secondary">‚Üê Back to Admin Homepage</a>
</div>


<table class="table table-bordered table-hover table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Email</th>
      <th>Address</th>
      <th>Pincode</th>
      <th>Mobile</th>
      <th>Total</th>
      <th>Payment Method</th>
      <th>Status</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
    <tr>
      <td>{{this.email}}</td>
      <td>{{this.address}}</td>
      <td>{{this.pincode}}</td>
      <td>{{this.mobile}}</td>
      <td>{{this.total}}</td>
      <td>{{this.paymentMethod}}</td>
      <td>{{this.status}}</td>
      <td>{{this.date}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
